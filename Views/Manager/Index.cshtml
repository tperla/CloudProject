@{
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<style>
    .background-img {
        position: relative;
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.7); /* Adjust the alpha (last value) for the brightness */
    }

    .section-tittle {
        font-size: 2.5rem; /* Adjust the font size as needed */
        color: black; /* Set text color to black */
        text-align: center; /* Center the text */
        position: absolute; /* Position the text absolutely */
        top: 50%; /* Center vertically */
        left: 50%; /* Center horizontally */
        transform: translate(-50%, -50%); /* Center precisely */
        z-index: 2; /* Place text above the overlay */
    }

    .pera {
        font-size: 1.5rem; /* Adjust the font size as needed */
        color: black; /* Set text color to black */
        text-align: center; /* Center the text */
        position: absolute; /* Position the text absolutely */
        top: 60%; /* Adjust vertical position as needed */
        left: 50%; /* Center horizontally */
        transform: translate(-50%, -50%); /* Center precisely */
        z-index: 2; /* Place text above the overlay */
    }
</style>

<div class="admin-header">

    <!-- About Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="about-area">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-12 position-relative">
                            <!-- Background Image with Overlay -->
                            <div class="background-img">
                                <img src="~/img/portfolio-5.jpg" alt="" class="w-100">
                                <div class="overlay"></div>
                            </div>
                            <!-- Caption Above Image -->
                            <div class="pera text-center">
                                <p>

                                    Welcome to Saba's Ice Cream, an iconic institution since 1985.
                                    Our website is a haven for ice cream lovers.
                                    Saba's commitment to creating rich and special flavors has been delighting customers for decades.
                                    Each flavor tells a story of creativity and quality, making each visit a sweet journey through time.
                                    At Saba's, we are proud to offer a warm atmosphere and a menu prepared with love.
                                    From loyal regulars to first-time visitors, everyone leaves with a satisfied smile,
                                    having experienced the unique symphony of flavors that defines Saba's ice cream parlor.
                                    Join us in celebrating the art of making ice cream and
                                    indulge in the richness of tradition - one scoop at a time.

                                
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
